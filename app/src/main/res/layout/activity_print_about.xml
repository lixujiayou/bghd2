<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/ll_print_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_mine_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ripple_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/about_item_style"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_mine_print" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接打印机"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/textcolor_2"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_print_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_mine_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ripple_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/about_item_style"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_print_break" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开打印机连接"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/textcolor_2"
            />

    </LinearLayout>
</LinearLayout>