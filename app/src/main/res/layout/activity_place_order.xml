<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="190dp"></com.youth.banner.Banner>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/height_item"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/textcolor_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="订单信息"
                    android:textColor="@color/textcolor_2"
                    android:textSize="@dimen/textsize_16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_item"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_button_background"
                        android:minHeight="30dp"
                        android:minWidth="80dp"
                        android:text="选择"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_16"

                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_auto_order"
                style="@style/item_place_order"
                android:layout_marginTop="@dimen/line_px"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_order_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:inputType="numberDecimal|number"
                    android:lines="1"
                    android:hint="扫描订单编号"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp"
                    android:enabled="true"
                    />
                <LinearLayout
                    android:id="@+id/ll_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right"
                    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_scan_red"
                    android:padding="4dp"
                    android:background="@drawable/ripple_bg_tran"
                    />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/item_place_order"
                android:layout_marginTop="@dimen/line_px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单价格:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_order_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:inputType="numberDecimal|number"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />

            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物品重量:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:inputType="numberDecimal|number"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/height_item"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                >

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/textcolor_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="收件人"
                    android:textColor="@color/textcolor_2"
                    android:textSize="@dimen/textsize_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_item"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_accpet_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_button_background"
                        android:minHeight="30dp"
                        android:minWidth="80dp"
                        android:text="选择"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_16"

                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/item_place_order"
                android:layout_marginTop="@dimen/line_px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_a_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>


            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="电话:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_a_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:inputType="number"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/tv_accept_adress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/ripple_bg_tran"
                    android:gravity="center_vertical"
                    android:hint="@string/tv_hint"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp"
                    android:textSize="@dimen/textsize_18"

                    />
            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="详细地址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_a_adressinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_a_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_item"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/textcolor_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="收件人图片信息"
                        android:textColor="@color/textcolor_2"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="(请选择身份证的正反面照片)"
                        android:textColor="@color/textcolor_4"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout style="@style/item_place_order">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_a_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        ></android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/height_item"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/textcolor_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="寄件人"
                    android:textColor="@color/textcolor_2"
                    android:textSize="@dimen/textsize_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_item"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_send_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_button_background"
                        android:minHeight="30dp"
                        android:minWidth="80dp"
                        android:text="选择"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_16"

                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/item_place_order"
                android:layout_marginTop="@dimen/line_px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_s_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="电话:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_s_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:inputType="number"
                    android:lines="1"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp" />
            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <TextView

                    android:id="@+id/tv_send_adress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/ripple_bg_tran"
                    android:gravity="center_vertical"
                    android:hint="@string/tv_hint"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp"
                    android:textSize="@dimen/textsize_18"

                    />
            </LinearLayout>

            <LinearLayout style="@style/item_place_order">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="详细地址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16" />

                <com.bghd.express.utils.base.DeletableEditText
                    android:id="@+id/et_s_adressinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:hint="@string/et_hint"
                    android:minHeight="@dimen/height_search"
                    android:paddingLeft="6dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_item"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/textcolor_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="寄件人图片信息"
                        android:textColor="@color/textcolor_2"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="(请选择身份证的正反面照片)"
                        android:textColor="@color/textcolor_4"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout style="@style/item_place_order">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        ></android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/height_search"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin">

                <Button
                    android:id="@+id/ll_meter_save"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/red_button_background"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>